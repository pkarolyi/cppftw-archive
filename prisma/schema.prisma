generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String  @id
  name     String
  imageUrl String?

  messages Message[]
}

model Channel {
  id        String  @id
  name      String  @unique
  isGeneral Boolean

  messages Message[]
}

enum MessageType {
  NORMAL
  THREAD_PARENT
  THREAD_CHILD
  THREAD_CHILD_BROADCAST
}

model Message {
  id        String      @id
  channelId String
  userId    String
  parentId  String?
  ts        String
  isoDate   String
  text      String
  type      MessageType

  threadParent  Message?  @relation("message_thread", fields: [parentId], references: [id])
  user          User      @relation(fields: [userId], references: [id])
  channel       Channel   @relation(fields: [channelId], references: [id])
  threadReplies Message[] @relation("message_thread")
  files         File[]
}

model File {
  id        String  @id
  slackId   String?
  messageId String
  mimeType  String?
  name      String?
  title     String?
  url       String?

  message Message @relation(fields: [messageId], references: [id])
}
