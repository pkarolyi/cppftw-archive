generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String  @id
  name     String
  imageUrl String?

  messages Message[]
}

model Channel {
  id        String  @id
  name      String  @unique
  isGeneral Boolean

  messages Message[]
}

enum MessageType {
  NORMAL
  THREAD_PARENT
  THREAD_CHILD
  THREAD_CHILD_BROADCAST
}

model Message {
  id        String      @id
  ts        String
  isoDate   String
  text      String
  type      MessageType
  channelId String
  userId    String
  parentId  String?

  user    User    @relation(fields: [userId], references: [id])
  channel Channel @relation(fields: [channelId], references: [id])
}
