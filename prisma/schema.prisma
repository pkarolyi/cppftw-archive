generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model ArchiveUser {
  id       String  @id
  name     String
  imageUrl String?

  messages ArchiveMessage[]
}

model ArchiveChannel {
  id        String  @id
  name      String  @unique
  isGeneral Boolean

  messages ArchiveMessage[]
}

enum ArchiveMessageType {
  NORMAL
  THREAD_PARENT
  THREAD_CHILD
  THREAD_CHILD_BROADCAST
}

model ArchiveMessage {
  id        String             @id
  ts        String
  isoDate   String
  text      String
  type      ArchiveMessageType
  channelId String
  userId    String
  parentId  String?

  user    ArchiveUser    @relation(fields: [userId], references: [id])
  channel ArchiveChannel @relation(fields: [channelId], references: [id])
}
